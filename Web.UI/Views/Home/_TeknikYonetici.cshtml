@{
    var data = new System.Data.DataTable();
    DbHelper.FillTable(data, "SELECT COUNT(Id) as Counts FROM Service");
    DbHelper.FillTable(data, "SELECT COUNT(Id) as Counts FROM Customer");
    DbHelper.FillTable(data, "SELECT COUNT(Id) as Counts FROM Visit");
    DbHelper.FillTable(data, "SELECT SUM(Price) as ProfitTL from  Service ");
}
<div class="row">
    <div class="col-xl-3 col-lg-6 col-12">
        <div class="card">
            <div class="card-content">
                <div class="media align-items-stretch">
                    <div class="p-2 text-center bg-primary bg-darken-2">
                        <i class="fa fa-skype font-large-2 white"></i>
                    </div>
                    <div class="p-2 bg-gradient-x-primary white media-body">
                        <h5>Toplam Servis</h5>
                        <h5 class="text-bold-400 mb-0"><i class="ft-activity"></i> @data.Rows[0]["Counts"]</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-lg-6 col-12">
        <div class="card">
            <div class="card-content">
                <div class="media align-items-stretch">
                    <div class="p-2 text-center bg-danger bg-darken-2">
                        <i class="icon-user font-large-2 white"></i>
                    </div>
                    <div class="p-2 bg-gradient-x-danger white media-body">
                        <h5>Toplam Müşteri</h5>
                        <h5 class="text-bold-400 mb-0"><i class="ft-activity"></i> @data.Rows[1]["Counts"]</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-lg-6 col-12">
        <div class="card">
            <div class="card-content">
                <div class="media align-items-stretch">
                    <div class="p-2 text-center bg-warning bg-darken-2">
                        <i class="fa fa-comment font-large-2 white"></i>
                    </div>
                    <div class="p-2 bg-gradient-x-warning white media-body">
                        <h5>Toplam Ziyaret</h5>
                        <h5 class="text-bold-400 mb-0"><i class="ft-activity"></i> @data.Rows[2]["Counts"]</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-lg-6 col-12">
        <div class="card">
            <div class="card-content">
                <div class="media align-items-stretch">
                    <div class="p-2 text-center bg-success bg-darken-2">
                        <i class="icon-wallet font-large-2 white"></i>
                    </div>
                    <div class="p-2 bg-gradient-x-success white media-body">
                        <h5>Kazanç</h5>
                        <h5 class="text-bold-400 mb-0"><i class="ft-arrow-up"></i> @data.Rows[3]["ProfitTL"] ₺</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="stockAlertDiv"></div>
<script>
    $(document).ready(function () {
        refresh('stockAlertDiv', '/STK/StockAlert/StockAlert');
    });
</script>