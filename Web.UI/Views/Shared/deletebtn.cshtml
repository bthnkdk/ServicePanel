@model DelBtn
@if (Model.IsDeleted)
{
    <button type="button" class="awe-btn" onclick="awe.oc('restore@(Model.Name)', { params: { id: @(Model.Id) } })">
        <span class="fa fa-reply-all"></span>
    </button>
}
else
{
    <button type="button" class="awe-btn" onclick="awe.open('delete@(Model.Name)', { params: { id: @(Model.Id) } }, event)">
        <span class="fa fa-trash"></span>
    </button>
}
