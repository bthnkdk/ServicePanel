@model string
@{
    Layout = "_FieldLayout.cshtml";
    var values = ViewData.ModelMetadata.AdditionalValues;
}
@Html.Password("", Model, new { @class = "form-control form-control-sm", autocomplete = "off" })
@if (values.ContainsKey("Info"))
{
    <small class="form-text text-muted">@Html.Raw(values["Info"].ToString())</small>
}
