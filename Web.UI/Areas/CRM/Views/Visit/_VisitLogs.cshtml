@using Domain
@model  List<VisitLog>
<style>
    #jfKennedyDIV {
        max-height: 300px;
        overflow-x: auto;
        overflow-y: auto;
    }

    #jfTable {
        white-space: normal;
    }

    tbody {
        display: block;
        height: 200px;
        overflow: auto;
    }

        thead, tbody tr {
            display: table;
            width: 100%;
            table-layout: fixed;
        }
</style>
<div class="table-responsive" id="jfKennedyDIV">
    <table id="jfTable" class="table table-striped table-bordered" width="100%">
        <thead>
            <tr>
                <th>Durum</th>
                <th>Açıklama</th>
                <th>Açıklama 2</th>
                <th>Güncelleyen Kişi</th>
                <th>Son Güncelleme</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@ConstHelper.VisitStatusClass(item.Status)</td>
                    <td>@item.Description</td>
                    <td>@item.Description2</td>
                    <td>@item.AppUser.FullName</td>
                    <td>@item.Date.ToString("dd.MM.yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
