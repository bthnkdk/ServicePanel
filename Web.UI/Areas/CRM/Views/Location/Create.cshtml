@model LocationInput
@Html.Partial("_ValSum")
@using (Html.BeginForm())
{
    using (Html.Awe().BeginContext())
    {
        @Html.HiddenFor(s => s.Id)
        @Html.HiddenFor(s => s.CreatedUserId)
        @Html.HiddenFor(s => s.CreatedDate)
        @Html.HiddenFor(s => s.RowId)
        @Html.HiddenFor(s => s.CustomerId)
        @Html.EditorFor(s => s.Name)
        @Html.EditorFor(s => s.CityId)
        @Html.EditorFor(s => s.TownId)
        @Html.EditorFor(s => s.Address)
        @Html.EditorFor(s => s.Phone)
        @Html.EditorFor(s => s.Mail)
        @Html.EditorFor(s => s.ResponsibleName)
        @Html.EditorFor(s => s.ResponsibleMail)
        @Html.EditorFor(s => s.ResponsiblePhone)
        <div class="form-group row">
            <label class="col-sm-4 font-weight-bold col-form-label col-form-label-sm">Departman</label>
            <div class="col-md-8">
                @Html.Awe().AjaxRadioList("DefaultDepartmentId").Url(Url.Content("/Data/GetDepartments")).Odropdown()
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 font-weight-bold col-form-label col-form-label-sm">Kullanıcı</label>
            <div class="col-md-8">
                @Html.Awe().AjaxRadioList("DefaultAppUserId").Url(Url.Content("/Data/GetAppUsersByDepartment")).Parent("DefaultDepartmentId", "id").Odropdown()
            </div>
        </div>
    }
}
